#!/usr/bin/env bash

readonly PROGRAM="xlsof"

process=$(ps axc | awk 'NR > 1' | awk '{print substr($0,index($0,$5))}' | sort -u | fzf)

if [[ -z "$process" ]]; then
    echo "$PROGRAM: no process selected" >&2
    exit 64
fi

if ! lsof -c "$process"; then
    echo "$PROGRAM: $process: failed to list open files" >&2
    exit 70
fi

exit 0
